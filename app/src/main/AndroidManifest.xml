<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.com.fasilitas">

    <application
        android:name=".UserClient"
        android:allowBackup="true"
        android:icon="@drawable/logokecil"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logokecil"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="android.com.fasilitas.MapAcitivity"></activity>

        <activity android:name="android.com.fasilitas.LoginActivity" />

        <activity android:name="android.com.fasilitas.RegisterActivity" />

        <activity android:name="android.com.fasilitas.MainActivity" />

        <activity android:name="android.com.fasilitas.ListActivity" />

        <activity android:name="android.com.fasilitas.MapKoordinatorActivity" />

        <activity android:name=".InfoActivity" />

        <activity
            android:name="android.com.fasilitas.SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
    </application>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />


</manifest>