<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="vertical"
        android:background="@color/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Informasi Pos Lapangan"
            android:padding="30dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/fac_bidang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/facility_content"
        android:gravity="center"
        android:padding="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/Black"
        android:textSize="17sp" />

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Koordinator"
        android:gravity="center"
        android:paddingTop="30dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:paddingBottom="20dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/pos"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/placeholder">
            </ImageView>

            <TextView
                android:id="@+id/fac_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/pos"
                android:layout_centerInParent="true"
                android:text="Nama pos"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/Black"
                android:textSize="16sp">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingEnd="70dp">

            <ImageView
                android:id="@+id/user"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user">
            </ImageView>

            <TextView
                android:id="@+id/det_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/user"
                android:layout_centerInParent="true"
                android:text="Nama user"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/Black"
                android:textSize="16sp">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/call">
            </ImageView>

            <TextView
                android:id="@+id/det_nomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/call"
                android:text="Nomor"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_centerInParent="true"
                android:textColor="@color/linkBlue"
                android:textSize="16sp">
            </TextView>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Deskripsi"
        android:textColor="@color/Black"
        android:justificationMode="inter_word"
        android:textSize="17sp"
        android:padding="40dp">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Lihat Peta"
            android:background="@drawable/buttonshape"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="15sp" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>